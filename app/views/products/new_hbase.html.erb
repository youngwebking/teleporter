<h1>New Product</h1>
<%= form_tag :products, role:'form', multipart: true do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class:'form-control', placeholder:'Product Name', name:'product[attr:name]' %>
  </div>
    
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class:'form-control', placeholder:'Product Price', name:'product[attr:price]' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :description %>
    <%= file_field_tag :description, name:'product[file:description]' %>
  </div>
  
  <div class="form-group">
    <%= label_tag :picture %>
    <%= file_field_tag :picture, name:'product[img:picture]' %>
  </div>
  
  <%= submit_tag 'Create', class:'btn btn-lg btn-primary' %>
<% end %>
